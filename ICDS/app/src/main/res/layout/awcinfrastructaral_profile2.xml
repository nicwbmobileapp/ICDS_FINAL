<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AWCInfrastructaralProfile2Activity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarAwcInfrastructure2"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="AWC Infrastructural Profile 2"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- app:navigationIcon="@drawable/ic_arrow_back" -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBarAwcInfrastructure2">


     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:padding="10dp"
         android:layout_height="wrap_content">



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Name of the Scheme"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/nameOfTheSchemeAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Date of Construction of Building"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/awc_2_date_view"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="--/--/--"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Button
                 android:id="@+id/awc_2_choose_date_btn"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="Choose Date"
                 android:layout_weight="2"/>


         </LinearLayout>


         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Type of Building"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/typeOfBuildingAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>




         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Type of Building"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/typeOfDrinkingWaterAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Whether Drinking  Water facility available within premises"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/drinkingWaterFacilityAvailableOrNotAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>


         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Whether water filter R.O available within premises"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/waterFilterRoAvailableOrNotAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>


         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Source of Funds ( For tap-water/tube-well/Hand â€“pump if available in premises)"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/sourceOfFundForWaterAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Water availed from outside source"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/waterAvailedFromOutsideSourceAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>


         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Distance of water facility from AWC premises  (In case it  is not available inside premises)"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/distanceOfWaterFacilityFromAwcPremisesAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Toilet structer"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/toiletStructureAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Toilet condition"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/toiletConditionAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#D3D3D3"
             android:layout_marginVertical="10dp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="3"
                 android:text="Type of toilet"
                 android:textSize="16sp"
                 android:layout_marginEnd="8dp"/>

             <Spinner
                 android:id="@+id/typeOfToiletAwc2Spinner"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"/>
         </LinearLayout>










         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="20dp"
             android:gravity="center">

             <Button
                 android:id="@+id/BackBtnForawcinfra2"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:backgroundTint="@color/colorPrimaryDark"
                 android:textColor="@color/white"
                 android:text="Back"
                 android:layout_marginEnd="8dp"/>

             <Button
                 android:id="@+id/saveAndNextAwc2Btn"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:backgroundTint="@color/colorPrimaryDark"
                 android:textColor="@color/white"
                 android:text="Save and Next"
                 android:layout_marginStart="8dp"/>
         </LinearLayout>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="10dp"-->
<!--                android:background="#ffff"-->
<!--                android:layout_marginVertical="10dp"/>-->




        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>